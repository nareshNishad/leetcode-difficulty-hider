{
  "manifest_version": 3,
  "name": "LeetCode Difficulty Hider",
  "version": "1.0",
  "description": "Hides the difficulty level of problems on LeetCode and adds a toggle button.",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["*://leetcode.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "38": "icons/icon38.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
